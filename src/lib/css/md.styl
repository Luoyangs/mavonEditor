* 
  margin: 0
  padding: 0

ul, ol
  padding-left 1.2em

strong
  font-weight 600

h1, h2, h3, h4, h5, h6
  font-weight 600
  line-height 1.25

  &:focus .header-anchor,
  &:hover .header-anchor
    opacity: 1

h1
  font-family: 'SourceHanSansCN'
  font-size: 24px
  font-style: normal
  font-weight: 700
  line-height: 36px
  letter-spacing: 0px
  text-align: left
  margin-top: 64px

h2
  font-family: 'SourceHanSansCN'
  font-size: 20px
  font-style: normal
  font-weight: 700
  line-height: 28px
  letter-spacing: 0px
  text-align: left
  margin-top: 24px

h3
  font-family: 'SourceHanSansCN'
  font-size: 16px
  font-style: normal
  font-weight: 700
  line-height: 24px
  letter-spacing: 0px
  text-align: left
  margin-top: 24px

p 
  font-family: 'SourceHanSansCN'
  font-size: 14px
  font-style: normal
  font-weight: 400
  line-height: 20px
  letter-spacing: 0px
  text-align: left
  margin-top: 8px
  &.bold
    font-weight: 700
    line-height: 24px

.small
  font-family: 'SourceHanSansCN'
  font-size: 12px
  font-style: normal
  font-weight: 400
  line-height: 16px
  letter-spacing: 0px
  text-align: left
  margin-top: 8px

a.header-anchor
  font-size 0.85em
  float left
  margin-left -0.87em
  padding-right 0.23em
  margin-top 0.125em
  opacity 0

  &:focus,
  &:hover
    text-decoration none

a:not(.header-anchor) 
  color: #2673dd

code, kbd, .line-number
  font-family source-code-pro, Menlo, Monaco, Consolas, "Courier New", monospace
  background: #f2f2f2
  display: block
  padding: 5px 12px

hr
  border 0
  border-top 1px solid #e5e5e5

table
  border-collapse collapse
  margin 1rem 0
  overflow-x: auto
  width: 100%
  border: none
  thead {
    box-shadow: inset 0px -3px 0px #E5E5E5

    tr {
      border-bottom: none
    }
  }

tr
  border-bottom: 1px solid #dfe2e5

th, td
  padding 16px 12px
  vertical-align: top

blockquote {
  padding: 5px 16px
  margin: 0 0 20px
  font-size: 17.5px
  border-left: 5px solid #eee
  background: #f6f6f6

  p {
    margin-top: 0
  }
}

nav.table-of-contents
  // position: fixed
  top: 48px
  right: 0px
  z-index: 1
  min-width: 228px
  padding: 0 16px
  background #fff
  ol 
    padding: 12px 0
    font-size: 14px
    overflow-y: auto
    max-height: calc(100% - 3.35rem)
    margin: 0
    li 
      margin-left: -1px
      text-decoration: none
      display: block
      cursor: pointer
      color: #2c3e50
      a
        position: relative
        display: block
        margin-bottom: 14px
        font-size: 14px
        line-height: 18px
        color: #666
        text-decoration: none
        white-space: nowrap
        transition: color .3s
        &.active
          font-weight: 500
          color: #ee4d2d
      ol  
        padding: 2px 12px 2px 16px

.shopee-br 
  padding-top: 8px
  font-size: 0
  line-height: 0
  margin: 0

.hidden 
  opacity 0

.show
  opacity 1